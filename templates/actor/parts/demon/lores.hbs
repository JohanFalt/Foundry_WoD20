<div class="sheet-area flex-columns">
    <div class="area-box" style="min-height: 150px;">

        <div class="sheet-headline sheet-banner splatFont" data-area="lores"><span class="sheet-banner-text">{{localize "wod.power.lores"}}</span></div>

        {{#each (getMainPowerList actor "wod.types.lore") as |item id|}}
            {{> "systems/worldofdarkness/templates/actor/parts/mainpower_list.hbs" mainpower=item config=../config actor=../actor locked=../locked}}
        {{/each}}
    </div>
</div>

{{#if actor.system.listdata.powers.lores.hasunlistedlores}}
    <div class="sheet-area unsorted-area flex-columns">
        <div class="headlineNormal info-box">{{localize "wod.power.unsortedlores"}}</div>

        <div class="area-box">
            {{#each actor.system.listdata.powers.lores.unlistedlores as | item id|}}

                <div class="row">
                    <div class="pullLeft headlineNormal width-namebox vrollable" 
                        data-type="{{../config.sheettype.demon}}"
                        data-object="SortLorePower"
                        data-rollitem="true"
                        data-itemid="{{item._id}}">{{item.name}}</div>
                    
                    {{#if (eq ../locked false)}}
                        <div class="power-iconbox">
                            <a class="item-delete" title="{{localize 'wod.labels.remove.lorepower'}}" data-type="Lore" data-item-id="{{item._id}}"><i class="icon fa-solid fa-trash-can"></i></a>
                        </div>
                    {{/if}}                    
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}


<!-- RITUALS -->
<div class="sheet-area flex-columns" style="min-height: 150px;">
    <div>
        <div class="sheet-headline sheet-banner splatFont" data-area="rituals"><span class="sheet-banner-text">{{localize "wod.power.rituals"}}</span></div>

        {{#each (getMainPowerList actor "wod.types.ritual") as |item id|}}
            {{> "systems/worldofdarkness/templates/actor/parts/power_list.hbs" item=item config=../config actor=../actor locked=../locked showclear=false}}
        {{/each}}
    </div>
</div>

<div class="sheet-area flex-columns" style="width: 50%;">

    <!-- Forms -->
    {{>"systems/worldofdarkness/templates/actor/parts/demon/forms.hbs"}}

</div>