{{log "bio"}}

<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<div class="sheet-area">	

		<div class="" style="display: flex;">
			<div style="width: 320px; flex-direction: column;">
				<div class="area-box">
					<div class="bioInformationArea floating-label-group">
						{{#if locked}}
							<input class="sheet-infoValues" type="text" value="{{actor.name}}" autocomplete="off" autofocus required />
						{{else}}
							<input class="sheet-infoValues editable" name="name" type="text" value="{{actor.name}}" data-dtype="String" autocomplete="off" autofocus required />
						{{/if}}
						<span class="floating-label">{{localize 'wod.bio.name'}}</span>
					</div>

					{{#if (ne actor.type config.sheettype.changeling)}}
						{{#if (ne (checkSystemsetting "viewBiotabPermission") "mini")}}
							<div class="bioInformationArea floating-label-group">
								{{#if locked}}
									<input class="sheet-infoValues" type="text" value="{{data.system.nature}}" autocomplete="off" autofocus required />
								{{else}}
									<input class="sheet-infoValues editable" name="system.nature" type="text" value="{{data.system.nature}}" data-name="data.system.nature" data-dtype="String" autocomplete="off" autofocus required />
								{{/if}}
								<span class="floating-label">{{localize 'wod.bio.nature'}}</span>
							</div>
						{{/if}}
											
						<div class="bioInformationArea floating-label-group">
							{{#if locked}}
								<input class="sheet-infoValues" type="text" value="{{data.system.demeanor}}" autocomplete="off" autofocus required />
							{{else}}
								<input class="sheet-infoValues editable" name="system.demeanor" type="text" value="{{data.system.demeanor}}" data-name="data.system.demeanor" data-dtype="String" autocomplete="off" autofocus required />
							{{/if}}
							<span class="floating-label">{{localize 'wod.bio.demeanor'}}</span>
						</div>
						
					{{/if}}

					{{#if (ne (checkSystemsetting "viewBiotabPermission") "mini")}}
						<div class="bioInformationArea floating-label-group">
							{{#if locked}}
								<input class="sheet-infoValues" type="text" value="{{data.system.concept}}" autocomplete="off" autofocus required />
							{{else}}
								<input class="sheet-infoValues editable" name="system.concept" type="text" value="{{data.system.concept}}" data-name="data.system.concept" data-dtype="String" autocomplete="off" autofocus required />
							{{/if}}
							<span class="floating-label">{{localize 'wod.bio.concept'}}</span>
						</div>
						
						<div class="bioInformationArea floating-label-group">
							{{#if locked}}
								<input class="sheet-infoValues" type="text" value="{{data.system.derangement}}" autocomplete="off" autofocus required />
							{{else}}
								<input class="sheet-infoValues editable" name="system.derangement" type="text" value="{{data.system.derangement}}" data-name="data.system.derangement" data-dtype="String" autocomplete="off" autofocus required />
							{{/if}}
							<span class="floating-label">{{localize 'wod.bio.derangement'}}</span>
						</div>	
					{{/if}}
				</div>				
			</div>

			<div style="flex: 1; margin-left: auto;">
				{{#if locked}}
					<img class="profile-img {{#if (eq actor.img 'icons/svg/mystery-man.svg')}}defaultimage{{/if}}" src="{{actor.img}}" />	
				{{else}}
					{{#if userpermissions.changeActorImage}}
						<img class="profile-img {{#if (eq actor.img 'icons/svg/mystery-man.svg')}}defaultimage{{/if}} pointer" src="{{actor.img}}" title="{{actor.name}}" data-edit="img" />
					{{else}}
						<img class="profile-img {{#if (eq actor.img 'icons/svg/mystery-man.svg')}}defaultimage{{/if}}" src="{{actor.img}}" />	
					{{/if}}
				{{/if}} 
			</div>
		</div>			
	</div>	

	<div class="sheet-area flex-columns">		

		<div class="area-box">

			{{#if graphicsettings.useLinkPlatform}}
				<div class="area-box headlineText splatFont">{{localize 'wod.bio.worldanvil'}}</div>
				<div class="bioInformationArea">
					{{#if locked}}
						{{#if (ne data.system.worldanvil "")}}
							<a href="{{data.system.worldanvil}}" target="_blank">{{localize 'wod.bio.worldanvillink'}}</a>
						{{else}}
							{{localize 'wod.bio.noworldanvillink'}}
						{{/if}}
					{{else}}
						<input class="sheet-infoValues {{#if (eq locked false)}}editable{{/if}}" name="system.worldanvil" type="text" value="{{data.system.worldanvil}}" data-name="data.system.worldanvil" data-dtype="String" />
					{{/if}}

				</div>
			{{/if}}

			{{> "systems/worldofdarkness/templates/actor/parts/description.hbs" proseheadline="wod.bio.appearance" prosename="system.appearance" prosevalue=appearance proseenriched=enrichedAppearance}}

			{{#if (ne (checkSystemsetting "viewBiotabPermission") "mini")}}
				{{> "systems/worldofdarkness/templates/actor/parts/description.hbs" proseheadline="wod.bio.background" prosename="system.background" prosevalue=background proseenriched=enrichedBackground}}									
			{{/if}}

			{{#if isGM}}
				{{> "systems/worldofdarkness/templates/actor/parts/description.hbs" proseheadline="wod.bio.tips" prosename="system.roleplaytip" prosevalue=roleplaytip proseenriched=enrichedRoleplaytip}}
			{{/if}}
		</div>
	</div>	
</section>