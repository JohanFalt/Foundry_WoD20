<!-- DISCIPLINES -->
<div class="sheet-area flex-columns">
    <div class="area-box">

        <div class="sheet-headline sheet-banner splatFont" data-area="disciplines"><span class="sheet-banner-text">{{localize "wod.power.disciplines"}}</span></div>

        {{#each (getMainPowerList actor "wod.types.discipline") as |item id|}}
            {{> "systems/worldofdarkness/templates/actor/parts/mainpower_list.hbs" mainpower=item config=../config actor=../actor locked=../locked}}
        {{/each}}
    </div>
</div>

{{#if actor.system.listdata.powers.disciplines.hasunlisteddisciplines}}
    <div class="sheet-area unsorted-area flex-columns">
        <div class="headlineNormal info-box">{{localize "wod.power.unsorteddisciplines"}}</div>

        <div class="area-box">
            {{#each actor.system.listdata.powers.disciplines.unlisteddisciplines as | item id|}}

                <div class="row">
                    <div class="pullLeft headlineNormal width-namebox vrollable" 
                        data-type="{{../config.sheettype.mortal}}"
                        data-object="SortDisciplinePower"
                        data-rollitem="true"
                        data-itemid="{{item._id}}">{{item.name}}</div>
                    
                    {{#if (eq ../locked false)}}
                        <div class="pullLeft power-iconbox">
                            <a class="item-delete" title="{{localize 'wod.labels.remove.disciplinepower'}}" data-type="Discipline" data-item-id="{{item._id}}"><i class="icon fa-solid fa-trash-can"></i></a>
                        </div>
                    {{/if}}                    
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}

{{#if (eq actor.system.settings.variant "general")}}

    <!-- COMBINATION DISCIPLINES -->
    <div class="sheet-area flex-columns">
        <div>

            <div class="sheet-headline sheet-banner splatFont" data-area="combinations"><span class="sheet-banner-text">{{localize "wod.power.combinations"}}</span></div>

            {{#each actor.system.listdata.powers.disciplines.combinationlist as | item id|}}
                {{> "systems/worldofdarkness/templates/actor/parts/power_list.hbs" item=item config=../config actor=../actor locked=../locked showclear=false}}
            {{/each}}
        </div>
    </div>

    <!-- PATHS -->
    <div class="sheet-area flex-columns">
        <div class="area-box">

            <div class="sheet-headline sheet-banner splatFont" data-area="paths"><span class="sheet-banner-text">{{localize "wod.power.paths"}}</span></div>

            {{#each (getMainPowerList actor "wod.types.disciplinepath") as |item id|}}
                {{> "systems/worldofdarkness/templates/actor/parts/mainpower_list.hbs" mainpower=item config=../config actor=../actor locked=../locked}}
            {{/each}}
        </div>
    </div>

    {{#if actor.system.listdata.powers.disciplines.hasunlistedpaths}}
        <div class="sheet-area unsorted-area flex-columns">
            <div class="headlineNormal info-box">{{localize "wod.power.unsortedpaths"}}</div>

            <div class="area-box">
                {{#each actor.system.listdata.powers.disciplines.unlistedpaths as | item id|}}

                    <div class="row">
                        <div class="pullLeft headlineNormal width-namebox vrollable" 
                            data-type="{{../config.sheettype.mortal}}"
                            data-object="SortPathPower"
                            data-rollitem="true"
                            data-itemid="{{item._id}}">{{item.name}}</div>
                        
                        {{#if (eq ../locked false)}}
                            <div class="pullLeft power-iconbox">
                                <a class="item-delete" title="{{localize 'wod.labels.remove.disciplinepower'}}" data-type="Discipline" data-item-id="{{item._id}}"><i class="icon fa-solid fa-trash-can"></i></a>
                            </div>
                        {{/if}}                    
                    </div>
                {{/each}}
            </div>
        </div>
    {{/if}}

{{/if}} 

<!-- RITUALS -->
<div class="sheet-area flex-columns">
    <div>

        <div class="sheet-headline sheet-banner splatFont" data-area="rituals"><span class="sheet-banner-text">{{localize "wod.power.rituals"}}</span></div>

        {{#each (getMainPowerList actor "wod.types.ritual") as |item id|}}
            {{> "systems/worldofdarkness/templates/actor/parts/power_list.hbs" item=item config=../config actor=../actor locked=../locked showclear=false}}
        {{/each}}
    </div>
</div>

