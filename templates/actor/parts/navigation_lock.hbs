{{#if isOwner}}
    <div class="profile-img-zone" data-area="unlock">
        <button type="button" class="lock-btn pointer fullSplatColor" data-action="actorLock">
            {{#if locked}}
                <i class="lock-icon fa fa-lock"></i>
            {{else}}
                <i class="lock-icon fa fa-unlock"></i>
            {{/if}}
        </button>
    </div>
{{/if}}